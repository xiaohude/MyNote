<?xml version="1.0" encoding="utf-8"?>
<!-- 新建和编辑Widget内容时的布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget40"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical"
    android:padding="5dp" >
    <!-- 标题栏 -->
    <LinearLayout
        android:id="@+id/widget_detail_header"
        style="@style/TitleBarLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="26.0dip"
        android:layout_marginLeft="5.5dp"
        android:layout_marginRight="5.5dp"
        android:background="@drawable/notes_header_blue" >

        <TextView
            android:id="@+id/tv_widget_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:layout_weight="1"
            android:textColor="#66333333"
            android:textSize="13.0sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imagebutton_bgcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:background="@drawable/bg_color" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="-3dp"
        android:layout_marginRight="-3dp"
        android:background="@drawable/item_light_blue"
        android:gravity="top|left"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textCursorDrawable="@null"
        android:textColor="#ff4b4b4b"
        android:textSize="20.0sp" />

</LinearLayout>