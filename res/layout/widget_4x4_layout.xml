<?xml version="1.0" encoding="utf-8"?>
<!-- Appwidget的背景通过设置ImageView的背景来实现的,因此使用FrameLayout -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_4x4"
    android:layout_width="330.0dip"
    android:layout_height="330.0dip" >

    <ImageView
        android:id="@+id/widget_4x4_imageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/border_background" />

    <TextView
        android:id="@+id/widget_4x4_textView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="14"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="30.0dip"
        android:textColor="#ff663300"
        android:textSize="14.0sp" />

</FrameLayout>